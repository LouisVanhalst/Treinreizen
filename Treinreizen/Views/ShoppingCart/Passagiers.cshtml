@model Treinreizen.ViewModel.PassagierVM

@{
    ViewData["Title"] = "Passagiers";
}

<h2>Passagiers</h2>

<h4>PassagiersVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Passagiers">
            @for (int i = 1; i <= ViewBag.AantalPassagiers; i++)
            {
            <p>Passagier @i:</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Voornaam" class="control-label"></label>
                <input asp-for="Voornaam" class="form-control" />
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Achternaam" class="control-label"></label>
                <input asp-for="Achternaam" class="form-control" />
                <span asp-validation-for="Achternaam" class="text-danger"></span>
            </div>
            @*@ViewBag.LijstPassagiers.add(@Model)*@
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<Treinreizen.Domain.Entities.Steden>

@{
    ViewData["Title"] = "WieTEST";
}

<h2>WieTEST</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StadId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StadId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StadId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

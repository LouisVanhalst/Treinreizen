        function disableSelected() {
            $("#naarAdres option").each(function (index, element) {
                if (element.value != $("#vanAdres").children("option:selected").val() || element.value == 0) {
                    element.style.display = "block"
                }
                else {
                    element.style.display = "none"
                }
            });
            $("#naarAdres").val(0)
        }


        $(function () {

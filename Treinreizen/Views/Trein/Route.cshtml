@model IEnumerable<Treinreizen.Domain.Entities.TreinRoutes>

@{
    ViewData["Title"] = "Route";
}

<h2>Route</h2>
@section styles {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Route">
            @*post*@
            <div class="form-group">
                <label for="vertrek" class="control-label">Vertrekplaats</label>
                <input id="vertrek" type="text" name="vertrek" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="search" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@if (Model != null)
{
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Vertrekdatum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReisMogelijkheden.VertrekNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReisMogelijkheden.AankomstNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TreinNummerNavigation.TreinNaam)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vertrekdatum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReisMogelijkheden.VertrekNavigation.Naam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReisMogelijkheden.AankomstNavigation.Naam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TreinNummerNavigation.TreinNaam)
                    </td>

                    <td>
                        <a asp-action="Select" asp-route-id="@item.RouteId">Selecteren</a>
                        <a asp-action="Edit" asp-route-id="@item.RouteId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.RouteId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.RouteId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
 </table>
}
        @section scripts
            {
            <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
            <script>
                $(document).ready(function () { $('#myTable').dataTable() });
            </script>
        }
